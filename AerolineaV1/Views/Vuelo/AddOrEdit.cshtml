@model AerolineaV1.Models.Vuelo

@{
    ViewData["Title"] = "Info";
}



<h4>Datos del Vuelo</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Piloto" class="control-label"></label>
                <select asp-for="Piloto" class="form-control col-md-12" asp-items="@(new SelectList(ViewBag.LaPutaLista,"Nombre","Nombre","Elije un Piloto"))"></select>
                @*<input asp-for="Piloto" class="form-control" />*@
                <span asp-validation-for="Piloto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destino" class="control-label"></label>
                <input asp-for="Destino" class="form-control" />
                <span asp-validation-for="Destino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeloAvion" class="control-label"></label>
                <input asp-for="ModeloAvion" class="form-control" />
                <span asp-validation-for="ModeloAvion" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Pasajeros" class="control-label"></label>
                    <input asp-for="Pasajeros" class="form-control" />
                    <span asp-validation-for="Pasajeros" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="FechaAbordaje" class="control-label"></label>
                    <input asp-for="FechaAbordaje" class="form-control" />
                    <span asp-validation-for="FechaAbordaje" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Lista Vuelos</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
