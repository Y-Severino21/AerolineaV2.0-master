@model AerolineaV1.Models.Avion

@{
    ViewData["Title"] = "Info";
}

<h4>Datos del Avion</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AvionID" />
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />  
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidad" class="control-label"></label>
                <input asp-for="Capacidad" class="form-control" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAvion" class="control-label"></label>
                <input asp-for="TipoAvion" class="form-control" />
                <span asp-validation-for="TipoAvion" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CantMotor" class="control-label"></label>
                    <input asp-for="CantMotor" class="form-control" />
                    <span asp-validation-for="CantMotor" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Velocidad" class="control-label"></label>
                    <input asp-for="Velocidad" class="form-control" />
                    <span asp-validation-for="Velocidad" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Lista Aviones</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
