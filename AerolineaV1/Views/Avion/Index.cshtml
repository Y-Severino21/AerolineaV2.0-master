@model IEnumerable<AerolineaV1.Models.Avion>

@{
    ViewData["Title"] = "Aviones";
}

<h1>Aviones Registrados</h1>
<hr />


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoAvion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantMotor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Velocidad)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Avion</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoAvion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantMotor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Velocidad)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.AvionID"><i class="fa fa-marker fa-lg"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.AvionID" class="text-danger ml-1" onclick="return confirm('Seguro que deseas borrar este registro?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
